<%- include('../../partials/header.ejs')%>
    <%- include('../../partials/navbar.ejs')%>

        <div class="container">
            <hr>
            <div class="card">
                <div class="card-header">

                    <h2>Editar Artigo</h2>
                </div>
                <div class="card-body">

                    <form action="/articles/save" method="POST">
                        <input class="form-control" type="text" name="title" id=""
                            placeholder="Defina o titulo do artigo"> <br>
                            <textarea id="article" class="form-control" placeholder="Escreva seu artigo aqui" name="body"></textarea> <br>
                            <label for="category">Categoria </label>
                            <select name="category" id="" class="form-control">
                                <%categories.forEach( (category) => { %>
                                    <option value="<%=category.id %>"> <%= category.title %> </option>
                                <% }) %>

                            </select>
                            <br>
                        <button class="btn-success">Atualizar</button>
                    </form>
                </div>
            </div>
        </div>

        <%- include('../../partials/footer.ejs')%>
        <script src="/tinymce/tinymce.min.js"></script>

        <script>
            tinymce.init({
                selector: "#article",
                plugins:[
                    'advlist autolink link image lists print hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
                ]
            })
        </script>